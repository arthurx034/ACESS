<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBlue"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Botão Voltar -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back"
            android:src="@drawable/return_button" />

        <!-- Título -->
        <TextView
            android:id="@+id/text_verify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Verifique seu número"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/text_verify_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite o código que enviamos por SMS"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginBottom="20dp" />

        <!-- Campo para código SMS -->
        <EditText
            android:id="@+id/edt_codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:hint="Código SMS"
            android:padding="12dp"
            android:inputType="number"
            android:gravity="center"
            android:textSize="18sp"
            android:maxLength="6" />

        <!-- Botão para verificar código -->
        <Button
            android:id="@+id/btn_verificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_style"
            android:text="Verificar código"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- Informação adicional -->
        <TextView
            android:id="@+id/text_info_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Não recebeu o código? Tente novamente em alguns instantes."
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:textAlignment="center" />

        <!-- Imagem decorativa -->
        <ImageView
            android:id="@+id/imageView_verify"
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/img" />

    </LinearLayout>
</ScrollView>
